@model List<task2.Models.Database.Product>
@{
    ViewBag.Title = "list";
}

<h2>list</h2>

<div class="container">
    <div class="row justify-content-start">

        @foreach (var p in Model)
        {
            <div class="col-2 card">
                <div class="card-body">
                    <p class="card-text">
                        <h2>@p.Name</h2>
                        <span>Price: BDT @p.Price</span><br />
                        <a href="/Product/ListCart/@p.Id">Add to Cart</a>
                    </p>
                </div>
            </div>
        }

    </div>
</div>